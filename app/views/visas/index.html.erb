<% if current_staff %>
  <p style="text-align:right">Welcome, <%= current_staff.name %> from <%= current_staff.corporate.name %></p>
<% end %>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="container" style="margin-top:30px;">
      <div class="row" style="margin-bottom:30px">
	<%= form_tag('visas/search', method: 'post', remote: true) do %>
	  <div class="col-md-4">
	    <%= label_tag :name %>
	    <%= text_field_tag :name %>
	  </div>
	  
	  <div class="col-md-4">
	    <%= label_tag :passport_number %>
	    <%= text_field_tag :passport_number %>
	  </div>
	  
	  <div class="col-md-4">
	    <%= submit_tag "Search", class: "btn btn-primary" %>
	  </div>
	<% end %>
      </div>
    </div>

    <div id="visa_table">
      <%= render partial: 'visa_table' %>
    </div>

  </div>
  <div class="col-md-1"></div>
</div>
