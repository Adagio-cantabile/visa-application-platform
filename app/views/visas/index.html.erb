<div style="background-color:#5AB3AD;height:50px;">
</div>

<div class="container" style="margin-top:30px;">
<div class="row" style="margin-bottom:30px">
  <%= form_tag('visas/search', method: 'post', remote: true) do %>
    <div class="col-md-4">
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>

    <div class="col-md-4">
      <%= label_tag :passport_number %>
      <%= text_field_tag :passport_number %>
      </div>

      <div class="col-md-4">
	<%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
  <% end %>
</div>

<%= flash[:notice] %>

<%= render partial: 'visa_table' %>


</div>
